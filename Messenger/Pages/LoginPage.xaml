<Page x:Class="Messenger.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Messenger"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      Background="#163148">

    <Grid>
        <Label Margin="0,0,0,225" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Width="140" Height="40"/>
        <TextBox x:Name="loginText" KeyDown="loginText_KeyDown" Margin="0,0,0,150" HorizontalAlignment="Center" VerticalAlignment="Center" Width="140" Height="35" TextChanged="loginText_TextChanged"/>
        <PasswordBox x:Name="passwordText" KeyDown="passwordText_KeyDown" PasswordChar="•" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="140" Height="35"/>
        <Label Margin="0,0,0,75" Content="Password" HorizontalAlignment="Center" VerticalAlignment="Center" Width="140" Height="35" />

        <Button x:Name="loginBut" Margin="0,100,0,0" Content="Log In" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Click="loginBut_Click" Height="40" Width="120"/>
    </Grid>
</Page>
